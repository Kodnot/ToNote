<UserControl x:Class="ToNote.Views.EditNoteDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToNote.Views"
             mc:Ignorable="d" 
             Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Margin="5">
            <TextBlock Text="Editing "/>
            <TextBlock Text="{Binding Note.Name}"/>
            <Button x:Name="button_save" Content="Save" Padding="5" HorizontalAlignment="Right"/>
        </DockPanel>
        <RichTextBox Grid.Row="1" x:Name="rtb">
            <RichTextBox.Resources>
                <Style TargetType="Paragraph">
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </RichTextBox.Resources>
        </RichTextBox>
    </Grid>
</UserControl>
