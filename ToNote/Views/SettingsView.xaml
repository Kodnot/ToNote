<UserControl x:Class="ToNote.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToNote.Views"
             mc:Ignorable="d" 
             Height="400" Width="400">

    <Grid Background="Transparent" Grid.Row="3">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0">
                <Button Content="Export data" Command="{Binding ExportCommand}"/>
                <Button Content="Import data" Command="{Binding ImportCommand}"/>
            </StackPanel >
        </Grid>

        <TextBlock Text="2019 © TeamSugma" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="16" Grid.Row="1" Foreground="#9099A2" Margin="0,0,0,10"/>
    </Grid>
</UserControl>